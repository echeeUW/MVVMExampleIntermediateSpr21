<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/paddingLarge"
    android:foreground="?selectableItemBackground">

    <ImageView
        android:id="@+id/ivDisplayPic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="visible"
        tools:visibility="visible"
        android:src="@drawable/ic_sun_outline"
        android:layout_marginEnd="12dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginEnd="@dimen/paddingLarge">

        <TextView
            android:id="@+id/tvEmailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="eric_chee_1234@gmail.com"/>

        <TextView
            android:id="@+id/tvMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="This is a really long email message that I wanted to type out for this occasion"/>
    </LinearLayout>

</LinearLayout>

